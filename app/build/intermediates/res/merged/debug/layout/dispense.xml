<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispense Medication"
        android:id="@+id/dispense_textView2"
        android:layout_gravity="center_horizontal"
        android:editable="false"
        android:textSize="14pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ip Address: "
        android:id="@+id/dispense_textView"
        android:editable="false"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/dispense_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fefefe"
        android:text="@string/str_ip_addr"
        android:textSize="12pt"
        android:textColor="#111"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="12pt"
        android:id="@+id/dispense_textView3"
        android:editable="false"/>

    <EditText
        android:id="@+id/dispense_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:background="#fefefe"
        android:inputType="textPersonName"
        android:textColor="#111"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="12pt"
        android:id="@+id/dispense_textView4"
        android:editable="false"/>

    <EditText
        android:id="@+id/dispense_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:background="#fefefe"
        android:textColor="#111"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:textSize="12pt"
        android:id="@+id/dispense_textView5"
        android:editable="false"/>

    <EditText
        android:id="@+id/dispense_med"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:background="#fefefe"
        android:inputType="text"
        android:textColor="#111"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pill Weight"
        android:textSize="12pt"
        android:id="@+id/dispense_textView6"
        android:editable="false"/>

    <EditText
        android:id="@+id/dispense_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:background="#fefefe"
        android:inputType="number"
        android:textColor="#111"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="12pt"
        android:id="@+id/dispense_textView7"
        android:editable="false"/>

    <EditText
        android:id="@+id/dispense_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:background="#fefefe"
        android:inputType="number"
        android:textColor="#111"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="12pt"
        android:id="@+id/dispense_connect"
        android:layout_gravity="center_horizontal" />


</LinearLayout>